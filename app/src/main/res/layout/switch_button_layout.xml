<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="fill_parent"
        android:layout_height="153dp"
        android:src="@drawable/robot_plug"
        android:layout_weight="0.16" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.16" />

    <LinearLayout
        style="@style/Base.V23.Theme.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="@string/switch_button"
           />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="0.5"
            android:paddingLeft="20dp"
            android:text="@string/checkbox"
             />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"
             />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.04" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="0.5"
            android:paddingLeft="20dp"
            android:text="@string/radio_button"
            />
        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
             />
    </LinearLayout>


    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:entries="@array/spinner_values" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="0.5"
            android:paddingLeft="20dp"
            android:text="@string/seek_bar"
            />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="301dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="@string/toggle_button"
        android:textOff="Unlimited Battery mode: DISABLE"
        android:textOn="Unlimited Battery mode: ENABLE" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.41" />

    <Button
        android:id="@+id/rateButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/buttonshape_purple"
        android:text="Rate the application"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


</LinearLayout>